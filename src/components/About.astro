    padding: var(--spacing-4);
    border-radius: 0.75rem;
    text-align: center;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    border: 1px solid var(--color-gray-200);
  }

  .stat-card .stat-number {
