  }

  .about-text p {
    margin-bottom: var(--spacing-4);
    line-height: 1.7;
  }

  .about-values {
    margin-top: var(--spacing-8);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-6);
  }

  .value h4 {
