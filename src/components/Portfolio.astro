---
import type { ImageMetadata } from 'astro:assets';

export interface Project {
  title: string;
  description: string;
  image: ImageMetadata; 
  alt: string;
  tags: string[];
}

export interface Props {
  projects?: Project[];
}

import image1 from '../images/ecommerce.webp';
import image2 from '../images/corporate.webp';
import image3 from '../images/mobile_app.webp';
import image4 from '../images/saas.webp';
import image5 from '../images/restaurant.webp';
import image6 from '../images/brand.webp';

const {
  projects = [
    {
      title: 'E‑commerce Platform',
      description: 'Modern online store with advanced features',
      image: image1,
      alt: 'E‑commerce Platform',
      tags: ['React', 'Node.js', 'MongoDB'],
    },
    {
      title: 'Corporate Website',
      description: 'Professional business website with CMS',
      image: image2,
      alt: 'Corporate Website',
      tags: ['Astro', 'Tailwind', 'Strapi'],
    },
    {
      title: 'Mobile App Design',
      description: 'Intuitive mobile app for fitness tracking',
      image: image3,
      alt: 'Mobile App Design',
      tags: ['React Native', 'UI/UX', 'Firebase'],
    },
    {
      title: 'SaaS Dashboard',
      description: 'Analytics dashboard for data visualization',
      image: image4,
      alt: 'SaaS Dashboard',
      tags: ['Vue.js', 'D3.js', 'Python'],
    },
    {
      title: 'Restaurant Website',
      description: 'Beautiful restaurant site with online ordering',
      image: image5,
      alt: 'Restaurant Website',
      tags: ['WordPress', 'WooCommerce', 'PHP'],
    },
    {
      title: 'Brand Identity',
      description: 'Complete brand redesign and guidelines',
      image: image6,
      alt: 'Brand Identity',
      tags: ['Logo Design', 'Branding', 'Print'],
    },
  ],
} = Astro.props;
---

<section class="portfolio section" id="portfolio">
  <div class="container">
    <!-- ───── Section header ───── -->
    <div class="section-header fade-in">
      <h2>Our Portfolio</h2>
      <p>
        Discover our latest projects and see how we’ve helped businesses achieve their
        digital goals
      </p>
    </div>

    <!-- ───── Grid ───── -->
    <div class="portfolio-grid">
      {projects.map((project) => (
        <div class="portfolio-item fade-in">
          <div class="portfolio-image">
            <img
              src={project.image.src}
              width={project.image.width}
              height={project.image.height}
              alt={project.alt}
              loading="lazy"
            />
            <div class="portfolio-overlay">
              <div class="portfolio-info">
                <h4>{project.title}</h4>
                <p>{project.description}</p>
                <div class="portfolio-tags">
                  {project.tags.map((tag) => (
                    <span>{tag}</span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- ───── CTA ───── -->
    <div class="portfolio-cta fade-in">
      <a href="#contact" class="btn btn-primary">Start Your Project</a>
    </div>
  </div>
</section>

<style>
  .portfolio {
    background: var(--color-gray-50);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--spacing-16);
    max-width: 600px;
    margin-inline: auto;
  }

  .section-header h2 {
    margin-bottom: var(--spacing-4);
  }

  .section-header p {
    font-size: 1.125rem;
  }

  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--spacing-8);
    margin-bottom: var(--spacing-16);
  }

  .portfolio-item {
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .portfolio-item:hover {
    transform: translateY(-8px);
  }

  .portfolio-image {
    position: relative;
    overflow: hidden;
    aspect-ratio: 16 / 10;
  }

  .portfolio-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .portfolio-item:hover .portfolio-image img {
    transform: scale(1.05);
  }

  .portfolio-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: flex-end;
    padding: var(--spacing-6);
    background: linear-gradient(
      135deg,
      rgba(99, 102, 241, 0.9) 0%,
      rgba(20, 184, 166, 0.9) 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .portfolio-item:hover .portfolio-overlay {
    opacity: 1;
  }

  .portfolio-info {
    color: var(--color-white);
  }

  .portfolio-info h4 {
    color: var(--color-white);
    margin-bottom: var(--spacing-2);
    font-size: 1.25rem;
  }

  .portfolio-info p {
    margin-bottom: var(--spacing-4);
    color: rgba(255, 255, 255, 0.9);
  }

  .portfolio-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-2);
  }

  .portfolio-tags span {
    padding: var(--spacing-1) var(--spacing-3);
    background: rgba(255, 255, 255, 0.2);
    border-radius: 2rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-white);
  }

  .portfolio-cta {
    text-align: center;
  }

  @media (max-width: 768px) {
    .portfolio-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-6);
    }

    /* On mobile keep overlay visible for readability */
    .portfolio-overlay {
      opacity: 1;
      background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, transparent 100%);
    }
  }
</style>
